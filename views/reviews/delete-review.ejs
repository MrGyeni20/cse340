<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.locals.title = "Delete Review"
} %>

<%- messages() %>

<p class="review-subtitle">Deleting review for: <strong><%= vehicle_name %></strong></p>

<div class="delete-confirmation">
  <h2>Are you sure you want to delete this review?</h2>
  
  <div class="review-preview">
    <div class="review-rating">
      <% for(let i = 1; i <= 5; i++) { %>
        <% if (i <= review_rating) { %>
          ★
        <% } else { %>
          ☆
        <% } %>
      <% } %>
    </div>
    <p><%= review_text %></p>
  </div>
  
  <form action="/review/delete" method="post">
    <input type="hidden" name="review_id" value="<%= review_id %>">
    <input type="hidden" name="inv_id" value="<%= inv_id %>">
    
    <button type="submit" class="submit-btn btn-danger">Yes, Delete Review</button>
    <a href="/inv/detail/<%= inv_id %>" class="btn-cancel">Cancel</a>
  </form>
</div>