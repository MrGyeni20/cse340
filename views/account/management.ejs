<% if (title) { %>
  <h1><%= title %></h1>
<% } else {
  res.locals.title = "Account Management"
} %>

<%- messages() %>

<div class="account-management">
  <% if (locals.loggedin && locals.accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    
    <div class="account-actions">
      <a href="/account/update/<%= accountData.account_id %>" class="btn">Update Account Information</a>
    </div>
    
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <div class="inventory-management">
        <h3>Inventory Management</h3>
        <p>
          <a href="/inv/" class="btn">Manage Inventory</a>
        </p>
      </div>
    <% } %>
  <% } else { %>
    <p>Please <a href="/account/login">log in</a> to view your account.</p>
  <% } %>
</div>